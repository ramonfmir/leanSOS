-- Lemmas to prove that ùîΩ is a `comm_ring`. 

variables (x y z : ùîΩ)

protected lemma add_zero : x + 0 = x :=
quotient.induction_on x (Œª a, quotient.sound $ by simplify_add; apply_pow_rat_cast h; simp)

protected lemma zero_add : 0 + x = x :=
quotient.induction_on x (Œª a, quotient.sound $ by simplify_add; apply_pow_rat_cast h; simp)

